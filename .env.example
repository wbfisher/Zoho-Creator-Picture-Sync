# Zoho Creator OAuth Credentials
# Get these from https://api-console.zoho.com (Self Client)
ZOHO_CLIENT_ID=your_client_id
ZOHO_CLIENT_SECRET=your_client_secret
ZOHO_REFRESH_TOKEN=your_refresh_token

# Zoho Creator App Details
ZOHO_ACCOUNT_OWNER_NAME=your_username
ZOHO_APP_LINK_NAME=your_app_name
ZOHO_REPORT_LINK_NAME=All_Photos

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key
SUPABASE_STORAGE_BUCKET=zoho-pictures

# Sync Schedule (cron format)
# Default: 2 AM daily
SYNC_CRON=0 2 * * *

# Image Processing
IMAGE_MAX_SIZE_MB=5
IMAGE_MAX_DIMENSION=4000
IMAGE_QUALITY=85

# App Settings
APP_SECRET_KEY=change-me-in-production
LOG_LEVEL=INFO
